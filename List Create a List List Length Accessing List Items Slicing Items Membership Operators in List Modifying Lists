#Question no 7

def display_operations(a, b):
    addition = a + b
    subtraction = a - b
    multiplication = a * b

    result = (
        f"a + b = {addition}\n"
        f"a - b = {subtraction}\n"
        f"a * b = {multiplication}"
    )

    return result

# Example usage:
a = 10
b = 5
print(display_operations(a, b))
